<Window x:Class="FluCreate.dialog.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FluCreate.dialog"
        xmlns:myLib="clr-namespace:MyLoadingLib;assembly=MyLoadingLib"
        mc:Ignorable="d"
        Title="Loading" Height="450" Width="600" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <SolidColorBrush Color="Black" Opacity=".10" />
    </Window.Background>
    <Grid>
        <myLib:CirclePointRingLoading  Width="50" Height="50" IsActive="True" IsLarge="False" Foreground="#3ca9fe"/>
    </Grid>
</Window>
